<body>
  <%- include('../includes/navigation.ejs') %>
  <section>
    <main>
      <% if (orders.length <= 0) { %>
        <h1>Nothing there!</h1>
        <% } else { %>
          <ul>
            <% orders.forEach( order => { %>
            <li>
              <h1>Order- # <%= order.id %> - <a href="/orders/<%= order._id %>">Invoice</a></h1>
              <ul>
                <% order.products.forEach(p => { %>
                <li> <%= p.product.title %> (<%= p.quantity %>)</li>
                <% }); %>
              </ul>
            </li>
            <% }); %>
          </ul>
          <% } %>
          
    </main>
  </section>
